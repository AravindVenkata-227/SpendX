
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    // Users can create their own profile.
    // Users can read and update their own profile.
    // No one can delete user profiles through client SDKs (manage through console or admin SDK).
    // No one can list all users.
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId && request.resource.data.id == userId;
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // allow delete: if false; // Example: explicitly disallow client-side deletion
    }

    // Transactions Collection
    // Users can create their own transactions.
    // Users can read, update, and delete their own transactions.
    match /transactions/{transactionId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, update, delete: if request.auth != null && resource.data.userId != null && request.auth.uid == resource.data.userId;
    }

    // Goals Collection
    // Users can create their own goals.
    // Users can read, update, and delete their own goals.
    match /goals/{goalId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, update, delete: if request.auth != null && resource.data.userId != null && request.auth.uid == resource.data.userId;
    }

    // Accounts Collection
    // Users can create their own accounts.
    // Users can read, update, and delete their own accounts.
    match /accounts/{accountId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, update, delete: if request.auth != null && resource.data.userId != null && request.auth.uid == resource.data.userId;
    }
  }
}
