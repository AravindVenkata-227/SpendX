
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    // - Anyone can create their own user profile document during signup.
    // - Only the authenticated user can read, update, or delete their own profile.
    // - Email and ID cannot be changed by the client after creation.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId 
                    && request.resource.data.id == userId
                    && request.resource.data.email == request.auth.token.email;
      allow update: if request.auth != null && request.auth.uid == userId
                    // Prevent updating id, email, createdAt by client
                    && !(request.resource.data.diff(resource.data).affectedKeys().hasAny(['id', 'email', 'createdAt']));
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Transactions Collection
    // - Users can only manage (create, read, update, delete) their own transactions.
    // - The 'userId' field in the transaction document must match the authenticated user's UID.
    match /transactions/{transactionId} {
      allow read: if request.auth != null && resource.data.userId != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId != null && request.auth.uid == resource.data.userId;
    }

    // Goals Collection
    // - Users can only manage their own goals.
    // - The 'userId' field in the goal document must match the authenticated user's UID.
    match /goals/{goalId} {
      allow read: if request.auth != null && resource.data.userId != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId != null && request.auth.uid == resource.data.userId;
    }

    // Accounts Collection
    // - Users can only manage their own accounts.
    // - The 'userId' field in the account document must match the authenticated user's UID.
    match /accounts/{accountId} {
       allow read: if request.auth != null && resource.data.userId != null && request.auth.uid == resource.data.userId;
       allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
       allow update, delete: if request.auth != null && resource.data.userId != null && request.auth.uid == resource.data.userId;
    }
  }
}
