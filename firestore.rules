
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    // Users can create their own profile.
    // Users can read and update their own profile.
    // Users cannot delete their profile through this rule (deletion might be an admin task or a specific function).
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId && request.resource.data.id == request.auth.uid;
    }

    // Transactions Collection
    // Users can create transactions for themselves.
    // Users can only read, update, or delete their own transactions.
    match /transactions/{transactionId} {
      allow read, update, delete: if request.auth != null && resource.data.userId != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.resource.data.userId != null && request.resource.data.userId == request.auth.uid;
    }

    // Goals Collection
    // Users can create goals for themselves.
    // Users can only read, update, or delete their own goals.
    match /goals/{goalId} {
      allow read, update, delete: if request.auth != null && resource.data.userId != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.resource.data.userId != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Accounts Collection
    // Users can create accounts for themselves.
    // Users can only read, update, or delete their own accounts.
    match /accounts/{accountId} {
      allow read, update, delete: if request.auth != null && resource.data.userId != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.resource.data.userId != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
