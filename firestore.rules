
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users:
    // - Authenticated users can create their own profile (doc ID must match their UID).
    // - Authenticated users can read and update their own profile.
    // - No one can list all users or delete profiles through client SDKs.
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId && request.resource.data.id == userId;
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Typically admin only, or implement specific conditions
      allow list: if false;   // Prevent listing all users
    }

    // Transactions:
    // - Authenticated users can create transactions for themselves (request.resource.data.userId must match their UID).
    // - Authenticated users can read, update, delete their own transactions.
    match /transactions/{transactionId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Goals:
    // - Authenticated users can create goals for themselves (request.resource.data.userId must match their UID).
    // - Authenticated users can read, update, delete their own goals.
    match /goals/{goalId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
